{
    "version": 2,
    "builds": [
        {
            "src": "dist/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "package.json",
            "use": "@vercel/node",
            "config": {
              "maxLambdaSize": "50mb",
              "installCommand": "apt-get update && apt-get install -y openjdk-11-jdk && npm install"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/version",
            "dest": "server.js"
        }
    ]
}
